        android:layout_height="64dp"
        android:background="#234562"
        app:title="@string/cronotermostato"
        app:titleTextColor="#FFFFFF"
        app:navigationIcon="@drawable/interruptor">

    </androidx.appcompat.widget.Toolbar>


