<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SwitchActivity"
    android:orientation="vertical"
    android:weightSum="100">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSwitch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40">

        <GridLayout
            android:id="@+id/gridLayoutSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            app:layout_constraintBottom_toTopOf="@+id/bottomActionsSwitch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagePanelSwitch"
            android:visibility="invisible">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textStartSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginEnd="10dp"
                android:drawableStart="@drawable/ic_ntp_on"
                android:src="@drawable/ic_move"
                android:text="12:00" />

            <ProgressBar
                android:id="@+id/progressSchedule"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:max="100">

            </ProgressBar>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textEndSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginEnd="10dp"
                android:drawableEnd="@drawable/ic_ntp_on"
                android:src="@drawable/ic_move"
                android:text="14:00" />


        </GridLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageAlarmSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alarm"
            app:layout_constraintEnd_toStartOf="@+id/imagePanelSwitch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout2">

        </androidx.appcompat.widget.AppCompatImageView>

        <ProgressBar
            android:id="@+id/progressOperationSwitch"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toTopOf="@+id/gridLayoutSchedule"
            app:layout_constraintEnd_toEndOf="@+id/imageAlarmSwitch"
            app:layout_constraintStart_toStartOf="@+id/imageAlarmSwitch"
            app:layout_constraintTop_toBottomOf="@+id/imageAlarmSwitch">

        </ProgressBar>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imagePanelSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_switch_on"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomActionsSwitch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/menu_switch"
            app:labelVisibilityMode="unlabeled">

        </com.google.android.material.bottomnavigation.BottomNavigationView>

        <GridLayout
            android:id="@+id/gridLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:columnCount="4"
            android:layoutDirection="rtl"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageBrokerConnected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_wifi_on" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageConnectedDeviceSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_action_connect_ok" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageUpgradeFirmwareSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_action_upgrade"
                android:visibility="invisible"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textDeviceInfoSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginEnd="10dp"
                android:drawableLeft="@drawable/ic_action_device"
                android:text="@string/move_device" />

        </GridLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textStatusSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto"
            app:layout_constraintBottom_toTopOf="@+id/imagePanelSwitch"
            app:layout_constraintEnd_toEndOf="@+id/imagePanelSwitch"
            app:layout_constraintStart_toStartOf="@+id/imagePanelSwitch"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout2">

        </androidx.appcompat.widget.AppCompatTextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/containerSwitch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60">

    </FrameLayout>
</LinearLayout>