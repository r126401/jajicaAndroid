<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    tools:context=".SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textNameParameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment"
            app:layout_constraintBottom_toTopOf="@+id/buttonOk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="30sp"/>


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textValueParameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25.5"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonOk"
            app:layout_constraintEnd_toEndOf="@+id/textNameParameter"
            app:layout_constraintStart_toStartOf="@+id/textNameParameter"
            app:layout_constraintTop_toBottomOf="@+id/textNameParameter">

        </com.google.android.material.textfield.TextInputEditText>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_ok"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="20dp">
        </androidx.appcompat.widget.AppCompatButton>


    </androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>