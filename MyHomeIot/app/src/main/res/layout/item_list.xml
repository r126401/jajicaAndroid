<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/editTextAdminItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_home_admin"
        android:drawablePadding="10dp"
        android:minWidth="820dp"
        android:text="@string/default_home"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageDeleteItem"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageEditItem"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_action_edit"
        app:layout_constraintBottom_toBottomOf="@+id/imageDeleteItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageDeleteItem" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageDeleteItem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_action_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.AppCompatImageView>


</androidx.constraintlayout.widget.ConstraintLayout>