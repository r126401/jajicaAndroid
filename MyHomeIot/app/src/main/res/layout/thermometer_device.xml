<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageThermometer"
            android:layout_width="30sp"
            android:layout_height="wrap_content"
            android:src="@drawable/themometer"
            app:layout_constraintBottom_toTopOf="@+id/textDeviceThermometer"
            app:layout_constraintEnd_toStartOf="@+id/textTemperatureThermometer"
            app:layout_constraintTop_toBottomOf="@+id/imageMenuThermometer">

        </ImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textTemperatureThermometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="times"
            android:text="21.5 ÂºC"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageThermometer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageThermometer">

        </androidx.appcompat.widget.AppCompatTextView>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textDeviceThermometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="termometro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="30sp">

        </com.google.android.material.textfield.TextInputEditText>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageMenuThermometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_options"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="5dp">

        </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageConnectedDeviceThermometer"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:paddingEnd="5sp"
            android:src="@drawable/ic_connect_nok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageMenuThermometer">

        </androidx.appcompat.widget.AppCompatImageView>

        <ProgressBar
            android:id="@+id/progressBarThermometerDevice"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>