<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_item_devices">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageThermometer"
            android:layout_width="30sp"
            android:layout_height="wrap_content"
            android:src="@drawable/themometer"
            app:layout_constraintBottom_toTopOf="@+id/textTemperatureThermometer"
            app:layout_constraintEnd_toEndOf="@+id/textTemperatureThermometer"
            app:layout_constraintStart_toStartOf="@+id/textTemperatureThermometer"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textTemperatureThermometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="times"
            android:text="21.5 ÂºC"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textDeviceThermometer"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="termometro"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textTemperatureThermometer"
            app:layout_constraintStart_toStartOf="@+id/textTemperatureThermometer"
            android:background="@color/zxing_transparent"
            android:layout_marginBottom="5dp"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageMenuThermometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_options"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp">

        </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageConnectedDeviceThermometer"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:paddingEnd="5sp"
            android:src="@drawable/ic_connect_nok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageMenuThermometer">

        </androidx.appcompat.widget.AppCompatImageView>

        <ProgressBar
            android:id="@+id/progressBarThermometerDevice"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/imageConnectedDeviceThermometer"
            app:layout_constraintStart_toEndOf="@+id/imageThermometer"
            app:layout_constraintTop_toTopOf="@+id/imageThermometer"
            android:indeterminateDrawable="@drawable/style_progress_bar"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>