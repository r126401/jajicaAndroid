<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAddHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners_buttons"
        android:drawableStart="@drawable/ic_action_check"
        android:text="@string/add_home"
        android:textColor="?colorOnPrimaryContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp"
        android:layout_gravity="end"
        android:padding="10dp">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recyclerAdminHomes2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:background="?attr/colorSurface">

    </androidx.recyclerview.widget.RecyclerView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?attr/colorSurface"
    android:layout_marginTop="30dp">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editAddHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/add_home"
        android:textColor="?colorOnPrimaryContainer"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:layout_marginStart="50dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonNewHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_action_check"
        android:text="@string/button_ok"
        android:background="@drawable/round_corners_buttons"
        android:visibility="invisible"
        android:padding="10dp"
        android:paddingBottom="0dp"
        android:layout_marginStart="20dp">

    </androidx.appcompat.widget.AppCompatButton>


</LinearLayout>



</LinearLayout>





