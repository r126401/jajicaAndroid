<?xml version="1.0" encoding="utf-8"?>
<resources>

<style name="botones" parent="Widget.AppCompat.Button">

    <item name="android:background">@color/colorPrimary</item>
    <item name="borderWidth">0dp</item>
    <item name="elevation">0dp</item>

</style>

    <style name="textActiveDayStyle" parent="Widget.AppCompat.TextView">

        <item name="android:background">@drawable/round_corners_active_days</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:height">30dp</item>
        <item name="android:gravity">center</item>

    </style>


    <style name="textDeactiveDayStyle" parent="Widget.AppCompat.TextView">

        <item name="android:background">@drawable/round_corners_deactive_days</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textColor">#ffcc00</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:height">30dp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="textItem" parent="Widget.AppCompat.TextView">

        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="layoutScheduleStyle">
        <item name="background">@drawable/round_corners_schedule_layout</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:progressDrawable">@drawable/style_progress_bar</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>



    <style name="tabApp" parent="Widget.MaterialComponents.TabLayout">

        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        
    </style>
    <style name="textDevice" parent="Widget.AppCompat.TextView">
        
        <item name="android:textSize">24sp</item>
        <item name="android:maxLength">10</item>


    </style>

    <style name="textTemperature" parent="Widget.AppCompat.TextView">

        <item name="android:textSize">40sp</item>

    </style>

    <style name="toolbarApp" parent="Theme.AppCompat">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupMenuBackground">?attr/colorSurface</item>
        <item name="actionMenuTextColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="titleCentered">true</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="floattingButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">50%</item>
    </style>
    
</resources>