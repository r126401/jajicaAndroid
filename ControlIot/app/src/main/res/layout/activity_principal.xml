<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActividadPrincipal">

    <ProgressBar
        android:id="@+id/progressEspera"
        style="?android:attr/progressBarStyle"
        android:layout_width="64dp"
        android:layout_height="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textEstadoBroker"
        android:layout_width="284dp"
        android:layout_height="37dp"
        android:paddingTop="10dp"
        android:text="@string/texto_broker"
        app:layout_constraintStart_toEndOf="@+id/progressEspera"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/imageViewEstadoBroker"
        android:layout_width="64dp"
        android:layout_height="37dp"
        android:contentDescription="@string/texto_broker"
        android:src="@drawable/bk_conectado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textEstadoBroker"
        app:layout_constraintTop_toTopOf="parent" />




    <ImageView
        android:id="@+id/imageViewImagenDecorativa"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/fondo_degradado"
        android:contentDescription="@string/imagen_decorativa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEstadoBroker" />
    <TextView
        android:id="@+id/textListaDispositivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_lista_dispositivos"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewImagenDecorativa" />


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeListaDispositivos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textListaDispositivo"
        tools:layout_editor_absoluteX="-16dp">

        <ListView
            android:id="@+id/listViewListaDispositivos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textListaDispositivo">


        </ListView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationMenuPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/menu_principal" />


</androidx.constraintlayout.widget.ConstraintLayout>